    ofstream resultFile(resultFilename, ios::app);  // Открываем файл в режиме добавления
    if (!resultFile) {
        cout << "Ошибка открытия файла для записи!" << endl;
        return;
    }

    resultFile << "Средний балл: " << avg << endl;
    if (avg > 4) {
        resultFile << "Стипендия будет!" << endl;
    }
    else {
        resultFile << "Стипендии не будет!" << endl;
    }
    resultFile << "------------------------" << endl; // Разделитель для удобства

    resultFile.close();
}

